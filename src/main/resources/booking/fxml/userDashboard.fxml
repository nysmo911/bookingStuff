<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserDashboardController" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d6d6d6);">
    <children>
        <StackPane prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: #c63434;">
            <children>
                <Label fx:id="welcomeLabel" text="DASHBOARD" textFill="white" textAlignment="CENTER">
                    <font>
                        <Font name="Impact" size="50.0" />
                    </font>
                </Label>
            </children>
        </StackPane>
        <VBox layoutX="0.0" layoutY="100.0" spacing="30.0" alignment="CENTER" prefWidth="600.0" style="-fx-padding: 20;">
            <children>
                <Label text="WELCOME USER" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #333;" />
                <Button fx:id="profileSettingsButton" mnemonicParsing="false" onAction="#handleProfileSettingsButton"
                        prefHeight="60.0" prefWidth="300.0" text="PROFILE SETTINGS"
                        style="-fx-background-color: #c63434; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 10;">
                    <font>
                        <Font name="Bebas Neue Regular" size="18.0" />
                    </font>
                </Button>
                <Button fx:id="reservationsButton" mnemonicParsing="false" onAction="#handleReservationsAction"
                        prefHeight="60.0" prefWidth="300.0" text="PAST &amp; UPCOMING RESERVATIONS"
                        style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 16; -fx-background-radius: 10;">
                    <font>
                        <Font name="Bebas Neue Regular" size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
