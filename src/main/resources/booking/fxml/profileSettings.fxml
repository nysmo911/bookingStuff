<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d6d6d6);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booking.controller.ProfileSettingsController">
    <children>
        <!-- Header -->
        <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="80.0" prefWidth="600.0" style="-fx-background-color: #c63434;">
            <children>
                <Label text="PROFILE SETTINGS" textFill="white">
                    <font>
                        <Font name="Impact" size="30.0" />
                    </font>
                </Label>
            </children>
        </VBox>

        <!-- Back Button -->
        <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" onAction="#handleBackAction" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10;" text="&lt; BACK" />

        <!-- Form Fields -->
        <VBox layoutX="50.0" layoutY="100.0" spacing="25.0">
            <children>
                <HBox spacing="20.0">
                    <Label alignment="CENTER_RIGHT" prefWidth="120.0" style="-fx-font-size: 14; -fx-text-fill: #333;" text="First Name:" />
                    <TextField fx:id="fnameField" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
                </HBox>
                <HBox spacing="20.0">
                    <Label alignment="CENTER_RIGHT" prefWidth="120.0" style="-fx-font-size: 14; -fx-text-fill: #333;" text="Last Name:" />
                    <TextField fx:id="lnameField" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
                </HBox>
                <HBox spacing="20.0">
                    <Label alignment="CENTER_RIGHT" prefWidth="120.0" style="-fx-font-size: 14; -fx-text-fill: #333;" text="Email:" />
                    <TextField fx:id="emailField" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
                </HBox>
                <HBox spacing="20.0">
                    <Label alignment="CENTER_RIGHT" prefWidth="120.0" style="-fx-font-size: 14; -fx-text-fill: #333;" text="Username:" />
                    <TextField fx:id="usernameField" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
                </HBox>
                <HBox spacing="20.0">
                    <Label alignment="CENTER_RIGHT" prefWidth="120.0" style="-fx-font-size: 14; -fx-text-fill: #333;" text="Password:" />
                    <TextField fx:id="passwordField" prefWidth="300.0" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
                </HBox>
            </children>
        </VBox>

        <!-- Action Buttons -->
        <HBox alignment="CENTER" layoutX="150.0" layoutY="350.0" spacing="30.0" />
          <Button fx:id="saveButton" layoutX="316.0" layoutY="360.0" onAction="#handleSave" prefWidth="120.0" style="-fx-background-color: #c63434; -fx-text-fill: white; -fx-background-radius: 10;" text="Save Changes" />
          <Button fx:id="cancelButton" layoutX="466.0" layoutY="360.0" onAction="#handleCancel" prefWidth="120.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10;" text="Cancel" />
    </children>
</AnchorPane>
