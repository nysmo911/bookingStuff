<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booking.controller.ReservationPageController">
   <children>
      <!-- Header Label -->
      <Label layoutX="178.0" layoutY="14.0" prefHeight="34.0" prefWidth="243.0" text="Pending Reservation">
         <font>
            <Font name="Impact" size="28.0" />
         </font>
      </Label>

      <!-- Hotel Name -->
      <Label layoutX="29.0" layoutY="65.0" prefHeight="22.0" prefWidth="297.0" text="Hotel Name: ">
         <font>
            <Font name="Broadway" size="18.0" />
         </font></Label>

      <!-- Check-in Date -->
      <Label layoutX="77.0" layoutY="100.0" text="Check-In Date:" />
      <DatePicker fx:id="checkInDatePicker" layoutX="183.0" layoutY="96.0" />

      <!-- Check-out Date -->
      <Label layoutX="77.0" layoutY="140.0" text="Check-Out Date:" />
      <DatePicker fx:id="checkOutDatePicker" layoutX="183.0" layoutY="136.0" />

      <!-- Single Room HBox (Room Type + Button) -->
      <HBox layoutX="28.0" layoutY="200.0" spacing="20.0">
         <Label text="Single Room - $ per night" />
         <Button fx:id="selectSingleRoomButton" onAction="#selectSingleRoom" text="Select" />
      </HBox>

      <!-- Double Room HBox (Room Type + Button) -->
      <HBox layoutX="28.0" layoutY="240.0" spacing="20.0">
         <Label text="Double Room - $ per night" />
         <Button fx:id="selectDoubleRoomButton" onAction="#selectDoubleRoom" text="Select" />
      </HBox>

      <!-- Suite Room HBox (Room Type + Button) -->
      <HBox layoutX="28.0" layoutY="280.0" spacing="20.0" />

      <!-- Selected Room Info -->
      <Label fx:id="selectedRoomTypeLabel" layoutX="28.0" layoutY="280.0" text="Selected Room: None" />
      <Label fx:id="selectedPriceLabel" layoutX="28.0" layoutY="304.0" text="Price: $" />

      <!-- Reserve Button -->
      <Button fx:id="reserveButton" layoutX="271.0" layoutY="344.0" mnemonicParsing="false" onAction="#handleReservation" text="Reserve" />
      <Button fx:id="backButton" layoutX="19.0" layoutY="18.0" mnemonicParsing="false" text="&lt; BACK">
         <font>
            <Font name="Impact" size="13.0" />
         </font>
      </Button>
      <Button fx:id="dashboardButton" layoutX="495.0" layoutY="18.0" mnemonicParsing="false" text="Dashboard">
         <font>
            <Font name="Impact" size="13.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
