<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?> <!-- Import added for Font -->

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to bottom, #f0f0f0, #d6d6d6);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="booking.controller.SignInController">
   <children>
      <VBox alignment="CENTER" layoutX="0.0" layoutY="0.0" prefHeight="100.0" prefWidth="600.0" style="-fx-background-color: #c63434;">
         <children>
            <Label text="Welcome" textAlignment="CENTER" textFill="white">
               <font>
                  <Font name="Impact" size="40.0" /> <!-- Fixed Font Import -->
               </font>
            </Label>
            <Label text="PLEASE SIGN IN" textAlignment="CENTER" textFill="white">
               <font>
                  <Font name="Impact" size="20.0" /> <!-- Fixed Font Import -->
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="36.0" layoutY="111.0" prefHeight="133.0" prefWidth="529.0" spacing="20.0">
         <children>
            <Label style="-fx-font-size: 16; -fx-text-fill: #333;" text="Username:" />
            <TextField fx:id="usernameField" prefWidth="300.0" promptText="Enter your username" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />

            <Label style="-fx-font-size: 16; -fx-text-fill: #333;" text="Password:" />
            <PasswordField fx:id="passwordField" prefWidth="300.0" promptText="Enter your password" style="-fx-background-radius: 10; -fx-border-radius: 10; -fx-border-color: #ccc; -fx-padding: 5;" />
         </children>
      </VBox>
      <VBox alignment="CENTER" layoutX="0.0" layoutY="260.0" prefWidth="600.0" spacing="15.0" />
      <Button fx:id="backButton" layoutX="20.0" layoutY="20.0" onAction="#handleHomepage" style="-fx-background-color: #333; -fx-text-fill: white; -fx-background-radius: 10;" text="&lt; BACK" />
      <Button fx:id="signUpButton" layoutX="225.0" layoutY="346.0" mnemonicParsing="false" onAction="#handleSignUp" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #333; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 10;" text="CREATE ACCOUNT" />
      <Button fx:id="signInButton" layoutX="225.0" layoutY="296.0" mnemonicParsing="false" onAction="#handleLogin" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #c63434; -fx-text-fill: white; -fx-font-size: 14; -fx-background-radius: 10;" text="SIGN IN" />
   </children>
</AnchorPane>
